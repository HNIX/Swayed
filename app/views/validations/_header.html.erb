<header>
    <!-- Heading -->
    <div class="flex flex-col items-start justify-between gap-x-8 gap-y-4 px-4 py-4 sm:flex-row sm:items-center sm:px-6 lg:px-8">
        <div>
        <div class="flex items-center gap-x-3">
            <h1 class="flex gap-x-3 text-base leading-7">
            <span class="font-semibold text-white"><%= field.name %></span>
            </h1>
        </div>
        <p class="mt-2 text-xs leading-6 text-gray-400">Data type: <%= field.data_type %></p>
        </div>
    </div>

    <!-- Secondary navigation -->
    <nav class="flex overflow-x-auto border-b border-white/10 py-4">
        <ul role="list" class="list-none flex min-w-full flex-none gap-x-6 px-4 text-sm font-semibold leading-6 text-gray-400 sm:px-6 lg:px-8">
        <li>
            <%= link_to 'Activity', campaign_campaign_field_path(@campaign, field) %>
        </li>
        <li>
            <%= link_to 'Settings', edit_campaign_campaign_field_path(@campaign, field), class: "" %>
        </li>
        <li>
            <%= nav_link_to campaign_campaign_field_validations_path(@campaign, field), class: "text-sm font-medium pb-2", inactive_class: "text-gray-200 hover:text-white", active_class: 'text-indigo-400 border-b border-indigo-400', contains: ["/validation", "/validations"] do %>
                Validations
            <% end %>
        </li>
        </ul>
    </nav>
</header>