<div class="flex flex-wrap my-4 lg:px-4">

  <div class="w-full lg:w-3/4 lg:p-4">
    <div class="lg:p-10 p-4 bg-white rounded-lg border border-gray-200 overflow-x-auto">

      <div class="sm:flex justify-between items-center mb-3">
        <h1 class="h3 flex-1"><%= t(".title") %></h1>

        <div>
          <%= link_to t(".create"), new_contact_path, class: "btn btn-primary" %>
        </div>
      </div>

      <% if @contacts.exists? %>
        <table class="table text-left text-sm">
          <thead class="bg-gray-100">
            <tr>
              <th class="p-3 uppercase text-left text-xs text-gray-500"><%= Contact.human_attribute_name(:name) %></th>
              <th class="p-3 uppercase text-left text-xs text-gray-500"><%= Contact.human_attribute_name(:email) %></th>
              <th class="p-3 uppercase text-left text-xs text-gray-500"><%= Contact.human_attribute_name(:phone) %></th>
              <th class="hidden sm:table-cell p-3 uppercase text-left text-xs text-gray-500"><%= Contact.human_attribute_name(:created_at) %></th>
              <th class="p-3 uppercase text-left text-xs text-gray-500"></th>
            </tr>
          </thead>
          <tbody>
            <% @contacts.each do |contact| %>
              <tr class="group border-t border-gray-200 hover:bg-gray-50">
                <td class="p-3 font-medium"><%= link_to contact.name, contact %></td>
                <td class="p-3 font-medium"><%= link_to contact.email, contact %></td>
                <td class="p-3 font-medium"><%= link_to contact.phone, contact %></td>
                <td class="hidden sm:table-cell p-3"><%= affiliate.created_at.strftime("%b %e, %Y") %></td>
                <td class="p-3 font-medium text-sm text-right"><%= link_to t(".view"), contact %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      <% else %>
        <div class="text-center p-8">
          <%= image_tag "empty.svg", class: "w-1/3 mb-4 m-auto" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
