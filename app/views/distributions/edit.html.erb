<div class="card-panel">
  <div class="card-inner">
    <h1 class="flex gap-x-3 text-base leading-7">
      <span class="font-semibold text-white">Edit distribution</span>
    </h1>
  </div>
  <div class="pt-6">
    <%= modal(padding: @padding, advance: @override_url || @advance, title: @modal_title) do %>
      <div class="card-inner pt-0 border-t-0">
        <%= render "form", distribution: @distribution %>
      </div>
    <% end %>
  </div>
</div>

