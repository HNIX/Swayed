<header>
<!-- Heading -->
<div class="flex flex-col items-start justify-between gap-x-8 gap-y-4 px-4 py-4 sm:flex-row sm:items-center sm:px-6 lg:px-8">
    <div>
    <div class="flex items-center gap-x-3">
        <h1 class="flex gap-x-3 text-base leading-7">
        <span class="font-semibold text-white"><%= @distribution.company.name %></span>
        </h1>
    </div>
    <p class="mt-2 text-xs leading-6 text-gray-400"><%= @distribution.endpoint %></p>
    </div>
</div>

<!-- Secondary navigation -->
<nav class="flex overflow-x-auto border-b border-white/10 py-4">
    <ul role="list" class="list-none flex min-w-full flex-none gap-x-6 px-4 text-sm font-semibold leading-6 text-gray-400 sm:px-6 lg:px-8">
    <li>
        <%= nav_link_to campaign_distribution_path(@campaign_distribution.campaign, @distribution), class: "text-sm font-medium pb-2", inactive_class: "text-gray-200 hover:text-white", active_class: 'text-indigo-400 border-b border-indigo-400' do %>
            Overview
        <% end %>
    </li>
    <li>
        <%= nav_link_to distribution_campaign_distribution_path(@distribution, @campaign_distribution), class: "text-sm font-medium pb-2", inactive_class: "text-gray-200 hover:text-white", active_class: 'text-indigo-400 border-b border-indigo-400' do %>
            Field Mappings
        <% end %>
    </li>
    <li>
        <%= nav_link_to '#', class: "text-sm font-medium pb-2", inactive_class: "text-gray-200 hover:text-white", active_class: 'text-indigo-400 border-b border-indigo-400' do %>
            Activity
        <% end %>
    </li>
    <li>
        <%= nav_link_to edit_campaign_distribution_path(@campaign_distribution.campaign, @distribution), class: "text-sm font-medium pb-2", inactive_class: "text-gray-200 hover:text-white", active_class: 'text-indigo-400 border-b border-indigo-400' do %>
            Settings
        <% end %>
    </li>
    <li>
        <%= nav_link_to '#', class: "text-sm font-medium pb-2", inactive_class: "text-gray-200 hover:text-white", active_class: 'text-indigo-400 border-b border-indigo-400' do %>
            Notifications
        <% end %>
    </li>
    </ul>
</nav>
</header>