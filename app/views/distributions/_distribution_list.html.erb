

<div class="mt-6 space-y-4">
    <!-- Card 1 -->
    <% @distributions.each do |distribution| %>
        <label class="relative block cursor-pointer text-left w-full">
            <input type="radio" name="radio-buttons" class="peer sr-only" checked="">
            
            <div class="p-4 rounded-lg dark:bg-slate-800 border border-gray-200 dark:border-slate-700/60  hover:border-gray-300 dark:hover:border-indigo-600 shadow-sm transition">
                <div class="grid grid-cols-12 items-center gap-x-2">
                    <!-- Card -->
                    <div class="col-span-6 order-1 sm:order-none sm:col-span-3 flex items-center space-x-4 lg:sidebar-expanded:col-span-6 xl:sidebar-expanded:col-span-3">
                       
                        <div>
                                <script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script> 

    <dotlottie-player src="https://lottie.host/63ef0f55-8e12-4724-8a63-b61b10ba7f55/8SF0EDnuiz.json" background="transparent" speed="0.4" style="width: 50px; height: 50px;" loop autoplay></dotlottie-player>
                            </div>
                        <div>
                            <div class="text-sm font-medium text-gray-800 dark:text-gray-100">
                                    <%= distribution.name %>
                                    <span class="ml-3 inline-flex items-center gap-x-1.5 rounded-md px-2 py-1 text-xs font-medium text-white ring-1 ring-inset ring-slate-500/50">
                                        <svg class="h-1.5 w-1.5 <%= distribution.active? ? 'fill-green-400' : 'fill-yellow-400' %>" viewBox="0 0 6 6" aria-hidden="true">
                                            <circle cx="3" cy="3" r="3" />
                                        </svg>
                                        <%= distribution.status %>
                                    </span>
                            </div>
                            <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-300">
                                <p class="whitespace-nowrap">Added <%= distribution.created_at.strftime("%b %d, %Y") %></p>
                                <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 fill-current">
                                <circle cx="1" cy="1" r="1" />
                                </svg>
                                <p class="truncate"><strong>Last API Request: </strong><%= distribution.last_api_request_time ? time_ago_in_words(distribution.last_api_request_time) + 'ago' : 'No activity yet' %></p>
                            </div> 
                        </div>
                    </div>
                    <!-- Name -->
                    <div class="col-span-6 order-2 sm:order-none sm:col-span-3 text-left sm:text-center lg:sidebar-expanded:hidden xl:sidebar-expanded:block">
                        <div class="text-sm font-medium text-gray-800 dark:text-gray-100 truncate"></div>
                    </div>
                    <!-- Card limits -->
                    <div class="col-span-6 order-1 sm:order-none sm:col-span-4 text-right sm:text-center lg:sidebar-expanded:col-span-6 xl:sidebar-expanded:col-span-4">
                        <div class="text-sm"></div>
                    </div>
                    <!-- Card status -->
                    <div class="col-span-6 order-2 sm:order-none sm:col-span-2 text-right lg:sidebar-expanded:hidden xl:sidebar-expanded:block">
                        <div class="flex flex-none justify-end gap-x-4" data-controller="dropdown">
                          <%= link_to "Mapping", edit_distribution_campaign_distribution_path(distribution, @campaign.campaign_distributions.find_by(distribution_id: distribution.id)), class: "rounded bg-white/10 px-2 py-1 text-sm font-semibold text-white shadow-sm hover:bg-white/20" %>
                          <div class="relative flex-none">
                              <button type="button" data-action="click->dropdown#toggle click@window->dropdown#hide touch->dropdown#toggle touch@window->dropdown#hide" class="-m-2.5 block p-2.5 text-gray-300 hover:text-white" id="options-menu-0-button" aria-expanded="false" aria-haspopup="true">
                                  <span class="sr-only">Open options</span>
                                  <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                      <path d="M10 3a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM10 8.5a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM11.5 15.5a1.5 1.5 0 10-3 0 1.5 1.5 0 003 0z" />
                                  </svg>
                              </button>
                              <div class="pr-6 absolute hidden right-0 z-20 mt-2 origin-top-right rounded-md bg-white py-2 shadow-lg ring-1 ring-gray-900/5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="options-menu-0-button" tabindex="-1" data-dropdown-target="menu"
                                      data-transition-enter="transition ease-out duration-200"
                                      data-transition-enter-from="opacity-0 translate-y-1"
                                      data-transition-enter-to="opacity-100 translate-y-0"
                                      data-transition-leave="transition ease-in duration-150"
                                      data-transition-leave-from="opacity-100 translate-y-0"
                                      data-transition-leave-to="opacity-0 translate-y-1"
                                      class="z-20 hidden mt-2 lg:absolute lg:right-0 dropdown-menu">
                              <!-- Active: "bg-gray-50", Not Active: "" -->
                                  <%= link_to "Edit", edit_campaign_distribution_path(@campaign, distribution), {data: {turbo_frame: "modal"}, class: "block px-3 py-1 text-sm leading-6 text-gray-900"} %>
                                  <a href="#" class="block px-3 py-1 text-sm leading-6 text-gray-900" role="menuitem" tabindex="-1" id="options-menu-0-item-1">Settings</a>
                                  <a href="#" class="block px-3 py-1 text-sm leading-6 text-gray-900" role="menuitem" tabindex="-1" id="options-menu-0-item-1">Reports</a>
                              </div>
                          </div>
                      </div>
                    </div>
                </div>
            </div>
            <div class="absolute inset-0 border-2 border-transparent rounded-lg pointer-events-none" aria-hidden="true"></div>
        </label>
    <% end %>
    
</div>





