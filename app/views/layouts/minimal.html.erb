<!DOCTYPE html>
<html class="<%= class_names("dark": current_user&.dark_theme?) %>" lang="<%= I18n.locale %>">
  <head>
    <%= render "head" %>
  </head>

  <body data-controller="theme" data-theme-preference-value="<%= current_user&.theme %>">
    <header>
      <%= impersonation_banner %>
      <%= render "flash" %>

      <nav class="flex flex-wrap items-center justify-between px-4 py-2 bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800 text-sm font-medium">
        <div class="flex items-center flex-shrink-0 mr-6">
          <%= link_to root_path do %>
            <%= render_svg "logo", styles: "fill-current text-gray-700 hover:text-gray-800" %>
            <span class="sr-only"><%= Jumpstart.config.application_name %></span>
          <% end %>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
