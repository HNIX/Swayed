<main class="flex-1 overflow-y-auto">
  <!-- Primary column -->
  <section aria-labelledby="primary-heading" class="flex h-full min-w-0 flex-1 flex-col lg:order-last">

    <div class="card-panel">
      
      <div class="card-header">
        <div class="-ml-4 -mt-2 flex flex-wrap items-center justify-between sm:flex-nowrap">
          <div class="ml-4 mt-2">
            <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white">Verticals</h3>
          </div>
          <div class="ml-4 mt-2 flex-shrink-0">
            <%= link_to "New Vertical", new_vertical_path, class: "rounded-md bg-indigo-500 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500" %>
          </div>
        </div>
      </div>
      <div class="card-inner">
      <ul role="list" class="divide-y divide-gray-200 list-none">
      <% if @verticals.exists? %>
      <% @verticals.each do |vertical| %>
        
          <li>
            <%= link_to vertical, class: "block" do %>
              <div class="flex items-center">
                <div class="flex min-w-0 flex-1 items-center">
                  <div class="min-w-0 flex-1 md:grid md:grid-cols-5 md:gap-4">
                    <div class="col-span-3">
                      <p class="truncate text-sm font-medium text-indigo-600 dark:text-gray-200"><%= vertical.name %></p>
                      <div class="mt-2 flex text-sm text-gray-500 dark:text-gray-300">
                        <div class="mr-3">Updated <%= vertical.updated_at.strftime("%b %e, %Y") %></div> -
                        <div class="ml-3"><%= vertical.campaigns.count %> associated campaigns</div>
                      </div>
                    </div>
                    
                    
                  
                  </div>
                </div>
                <div>
                  <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                  </svg>
                </div>
              </div>
            <% end %>
          </li>

        <% end %>
        <% else %>
            <div class="text-center p-8">
              <%= image_tag "empty.svg", class: "w-1/3 mb-4 m-auto" %>
            </div>
        <% end %>
      </ul>
    </div>

    </div>
  </section>

</main>










