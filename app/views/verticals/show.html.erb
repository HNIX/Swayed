<main class="flex-1 overflow-y-auto">
  <!-- Primary column -->
  <section aria-labelledby="primary-heading" class="flex h-full min-w-0 flex-1 flex-col lg:order-last">

    <div class="px-12 mt-12">
      <header class="flex-1 overflow-y-auto pb-10 w-full">
        <div class="mx-auto max-w-7xl xl:flex xl:items-center xl:justify-between">
          <div class="min-w-0 flex-1">
            <nav class="flex" aria-label="Breadcrumb">
              <ol role="list" class="flex items-center space-x-4 list-none">
                <li>
                  <div>
                    <%= link_to "< All Verticals", verticals_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" %>
                  </div>
                </li>
              </ol>
            </nav>
            <h1 class="mt-2 text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight"><%= @vertical.name %></h1>
            <div class="mt-1 flex flex-col sm:mt-0 sm:flex-row sm:flex-wrap sm:space-x-8">
              <div class="mt-2 flex items-center text-sm text-gray-500">
                <svg class="mr-1.5 h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.75 2a.75.75 0 01.75.75V4h7V2.75a.75.75 0 011.5 0V4h.25A2.75 2.75 0 0118 6.75v8.5A2.75 2.75 0 0115.25 18H4.75A2.75 2.75 0 012 15.25v-8.5A2.75 2.75 0 014.75 4H5V2.75A.75.75 0 015.75 2zm-1 5.5c-.69 0-1.25.56-1.25 1.25v6.5c0 .69.56 1.25 1.25 1.25h10.5c.69 0 1.25-.56 1.25-1.25v-6.5c0-.69-.56-1.25-1.25-1.25H4.75z" clip-rule="evenodd" />
                </svg>
                Updated <%= @vertical.updated_at.strftime("%b %e, %Y") %>
              </div>
            </div>
          </div>
          <div class="mt-5 flex xl:mt-0 xl:ml-4">
            <span class="hidden sm:block">
              <%= link_to edit_vertical_path(@vertical), class: "inline-flex items-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
                <svg class="-ml-0.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path d="M2.695 14.763l-1.262 3.154a.5.5 0 00.65.65l3.155-1.262a4 4 0 001.343-.885L17.5 5.5a2.121 2.121 0 00-3-3L3.58 13.42a4 4 0 00-.885 1.343z" />
                </svg>
                Edit
              <% end %>
            </span>

            <!-- Dropdown -->
            <div class="relative ml-3 sm:hidden">
              <button type="button" class="inline-flex items-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:ring-gray-400" id="mobile-menu-button" aria-expanded="false" aria-haspopup="true">
                More
                <svg class="-mr-1 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                </svg>
              </button>

              <!--
                Dropdown menu, show/hide based on menu state.

                Entering: "transition ease-out duration-200"
                  From: "transform opacity-0 scale-95"
                  To: "transform opacity-100 scale-100"
                Leaving: "transition ease-in duration-75"
                  From: "transform opacity-100 scale-100"
                  To: "transform opacity-0 scale-95"
              -->
              <div class="absolute right-0 z-10 mt-2 -mr-1 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="mobile-menu-button" tabindex="-1">
                <!-- Active: "bg-gray-100", Not Active: "" -->
                <%= link_to "Edit", edit_vertical_path(@vertical), class: "block px-4 py-2 text-sm text-gray-700" %>
              </div>
            </div>
          </div>
        </div>
      </header>
      
      <div class="overflow-hidden bg-white shadow sm:rounded-lg">
          <div class="flex-1 overflow-y-auto pt-8">
            <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">

              <!-- Stacked list -->
              <table class="min-w-full divide-y divide-gray-300">
                  <thead>
                    <tr>
                      <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-3">Label</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Name</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Data Type</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Ping Required</th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Post Required</th>
                    </tr>
                  </thead>
                  <tbody class="bg-white">
                    <% @vertical.fields.each do |field| %>
                    <!-- Odd row -->
                      <tr>
                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-3"><%= field.label %></td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= field.name %></td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= field.data_type %></td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= field.ping_required %></td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= field.post_required %></td>
                      </tr>
                    <% end %>

                    <!-- More people... -->
                  </tbody>
                </table>
            </div>
          </div>

      
      </div>
    </div>
  </section>

</main>
<!-- Secondary column (hidden on smaller screens) -->
<aside class="hidden w-96 overflow-y-auto border-l border-gray-200 bg-gray-200 shadow-inner lg:block pt-12 px-8">
  <div>

  
</div>
  <!-- Your content -->

  
</aside>