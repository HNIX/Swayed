<div class="lg:rounded-lg bg-white text-gray-600 shadow dark:text-gray-200 dark:bg-slate-950/30 dark:ring-1 dark:ring-white/10 dark:backdrop-blur">
  <% active_class = "bg-primary-600 text-white hover:text-white dark:bg-primary-800" %>
  <% inactive_class = "text-gray-700 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-50 dark:hover:text-gray-200 dark:hover:bg-gray-700" %>
  <%= nav_link_to t(".profile"), edit_user_registration_path, class: "block no-underline p-3 px-6 rounded-t", active_class: "bg-blue-600 text-white hover:text-white", inactive_class: "text-gray-700 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-200 dark:hover:text-white dark:hover:bg-slate-800" %>
  <%= nav_link_to t(".password"), edit_account_password_path, class: "block no-underline p-3 px-6", active_class: "bg-blue-600 text-white hover:text-white", inactive_class: "text-gray-700 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-200 dark:hover:text-white dark:hover:bg-slate-800" %>
  <%= nav_link_to t(".connected_accounts"), user_connected_accounts_path, class: "block no-underline p-3 px-6", active_class: "bg-blue-600 text-white hover:text-white", inactive_class: "text-gray-700 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-200 dark:hover:text-white dark:hover:bg-slate-800" if Devise.omniauth_configs.any? %>
  <% unless turbo_native_app? %>
    <%= nav_link_to t(".billing"), subscriptions_path, class: "block no-underline p-3 px-6", active_class: 'bg-blue-600 text-white hover:text-white', inactive_class: 'text-gray-700 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-200 dark:hover:text-white dark:hover:bg-slate-800', starts_with: ["/subscriptions", "/payment_methods"] if Jumpstart.config.payments_enabled? %>
  <% end %>
  <%= nav_link_to t(".accounts"), accounts_path, class: "block no-underline p-3 px-6", active_class: "bg-blue-600 text-white hover:text-white", inactive_class: "text-gray-700 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-200 dark:hover:text-white dark:hover:bg-slate-800", starts_with: "/accounts" %>
  <%= nav_link_to t(".api_tokens"), api_tokens_path, class: "block no-underline p-3 px-6 rounded-b", active_class: "bg-blue-600 text-white hover:text-white", inactive_class: "text-gray-700 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-200 dark:hover:text-white dark:hover:bg-slate-800", starts_with: "/api_tokens" %>
  <%= nav_link_to t(".source_tokens"), source_tokens_path, class: "block no-underline p-3 px-6 rounded-b", active_class: "bg-blue-600 text-white hover:text-white", inactive_class: "text-gray-700 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-200 dark:hover:text-white dark:hover:bg-slate-800", starts_with: "/affiliate_tokens" %>
</div>


