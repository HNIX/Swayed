<div class="flex flex-wrap">
  <div class="lg:w-1/4 w-full pr-4">
    <%= render partial: "shared/account_navbar" %>
  </div>

  <div class="lg:w-3/4 w-full pl-4">
    <div class="card-panel-settings">
      <h1 class="h3">
        <%= link_to t("accounts.index.title"), accounts_path, class: "hover:text-black dark:hover:text-gray-300" %>
        <%= render_svg "icons/cheveron-right", styles: "fill-current icon-sm text-gray-600 dark:text-gray-300 inline-block" %>
        <%= t(".title") %>
      </h1>
      <div class="mb-8 text-gray-700 dark:text-gray-300"><%= t(".description") %></div>

      <%= render 'form', account: @account %>
    </div>
  </div>
</div>
