


  <div class="bg-white px-4 py-5 sm:px-6 rounded-lg shadow">
    <div class="md:flex md:items-center md:justify-between">
      <div class="w-full">
        <div class="flex justify-between">
          <%= link_to "< All Partners", companies_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" %>

          <div data-controller="dropdown" class="relative ml-auto">
            <button data-action="click->dropdown#toggle touch->dropdown#toggle click@window->dropdown#hide" type="button" class="block p-1 text-gray-400 hover:text-gray-500 rounded-full ring-2 ring-gray-300" id="options-menu-0-button" aria-expanded="false" aria-haspopup="true">
              <span class="sr-only">Open options</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M3 10a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM8.5 10a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM15.5 8.5a1.5 1.5 0 100 3 1.5 1.5 0 000-3z" />
              </svg>
            </button>

            <!--
              Dropdown menu, show/hide based on menu state.

              Entering: "transition ease-out duration-100"
                From: "transform opacity-0 scale-95"
                To: "transform opacity-100 scale-100"
              Leaving: "transition ease-in duration-75"
                From: "transform opacity-100 scale-100"
                To: "transform opacity-0 scale-95"
            -->
            <div data-dropdown-target="menu" class="hidden absolute right-0 z-10 mt-0.5 w-36 origin-top-right rounded-md bg-white py-2 shadow-lg ring-1 ring-gray-900/5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="options-menu-0-button" tabindex="-1">
              <!-- Active: "bg-gray-50", Not Active: "" -->
              <a href="#" class="block px-3 py-1 text-sm leading-6 text-gray-900" role="menuitem" tabindex="-1" id="options-menu-0-item-0">Edit Company<span class="sr-only">, Tuple</span></a>
              <a href="#" class="block px-3 py-1 text-sm leading-6 text-gray-900" role="menuitem" tabindex="-1" id="options-menu-0-item-1">Add Source<span class="sr-only">, Tuple</span></a>
              <a href="#" class="block px-3 py-1 text-sm leading-6 text-gray-900" role="menuitem" tabindex="-1" id="options-menu-0-item-1">Add Distribution<span class="sr-only">, Tuple</span></a>
            </div>
          </div>
        </div>
        <h3 class="mt-3 font-semibold leading-6 text-gray-900"><%= company.name %></h3>
        <div class="mt-3 flex flex-col sm:flex-row sm:flex-wrap sm:space-x-8">
          <div class="mt-2 flex items-center text-sm text-gray-500">
              <svg class="mr-1.5 h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.75 2a.75.75 0 01.75.75V4h7V2.75a.75.75 0 011.5 0V4h.25A2.75 2.75 0 0118 6.75v8.5A2.75 2.75 0 0115.25 18H4.75A2.75 2.75 0 012 15.25v-8.5A2.75 2.75 0 014.75 4H5V2.75A.75.75 0 015.75 2zm-1 5.5c-.69 0-1.25.56-1.25 1.25v6.5c0 .69.56 1.25 1.25 1.25h10.5c.69 0 1.25-.56 1.25-1.25v-6.5c0-.69-.56-1.25-1.25-1.25H4.75z" clip-rule="evenodd" />
              </svg>
              Updated <%= @company.updated_at.strftime("%b %e, %Y") %>
          </div>
          <div class="mt-2 flex items-center text-sm text-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-1.5 h-5 w-5 flex-shrink-0 text-gray-400">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
            </svg>

            <%= @company.city %>, <%= @company.state %>
          </div>
          <div class="mt-2 flex items-center text-sm text-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-1.5 h-5 w-5 flex-shrink-0 text-gray-400">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z" />
            </svg>

            <%= @company.billing_cycle.humanize %>, Net <%= @company.payment_terms %>
          </div>
        </div>
      </div>
    
    </div>
    <div class="mt-6">
      <!-- Dropdown menu on small screens -->
      <div class="sm:hidden">
        <label for="current-tab" class="sr-only">Select a tab</label>
        <select id="current-tab" name="current-tab" class="block w-full rounded-md border-0 py-1.5 pl-3 pr-10 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600">
          <option>Reporting</option>
          <option>Inbound Pings</option>
          <option>Outbound Pings</option>
          <option>Leads</option>
        </select>
      </div>
      <!-- Tabs at small breakpoint and up -->
      <div class="hidden sm:block">
        <nav class="flex space-x-4" >
          <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" -->
          <%= nav_link_to company_path(company), class: "rounded-md px-3 py-2 text-sm font-medium", inactive_class: "text-gray-500 hover:text-gray-700 ", active_class: 'bg-gray-100 text-gray-700' do %>
            Contacts
          <% end %>
          <%= nav_link_to company_sources_path(company), class: "rounded-md px-3 py-2 text-sm font-medium", inactive_class: "text-gray-500 hover:text-gray-700 ", active_class: 'bg-gray-100 text-gray-700' do %>
            Sources
          <% end %>
          <%= nav_link_to company_distributions_path(company), class: "rounded-md px-3 py-2 text-sm font-medium", inactive_class: "text-gray-500 hover:text-gray-700 ", active_class: 'bg-gray-100 text-gray-700' do %>
            Distributions
          <% end %>
          <%= nav_link_to edit_company_path(company), class: "rounded-md px-3 py-2 text-sm font-medium", inactive_class: "text-gray-500 hover:text-gray-700 ", active_class: 'bg-gray-100 text-gray-700' do %>
            Settings
          <% end %>
        </nav>
      </div>
    </div>
  </div>


  