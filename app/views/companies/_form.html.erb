<div class="divide-y divide-white/5">
        <div class="grid grid-cols-1 gap-x-8 gap-y-10 md:grid-cols-3 px-3">
          <div>
            <h2 class="text-base font-semibold leading-7 text-white">Personal Information</h2>
            <p class="mt-1 text-sm leading-6 text-gray-400">Use a permanent address where you can receive mail.</p>
          </div>

<%= form_with(model: company, class: "md:col-span-2") do |form| %>
  <%= render "shared/error_messages", resource: form.object %>
  <div class="space-y-6">

    <div class="border-b border-white/10 pb-10">

      <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <label for="first-name" class="block text-sm font-medium leading-6 text-white">Company name</label>
          <div class="mt-2">
            <%= form.text_field :name, placeholder: "Company Name", autofocus: true, id: "company_name", class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-full">
          <label for="address" class="block text-sm font-medium leading-6 text-white">Address</label>
          <div class="mt-2">
            <%= form.text_field :address, placeholder: true, autofocus: true, class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-2 sm:col-start-1">
          <label for="city" class="block text-sm font-medium leading-6 text-white">City</label>
          <div class="mt-2">
            <%= form.text_field :city, placeholder: true, autofocus: true, class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-2">
          <label for="region" class="block text-sm font-medium leading-6 text-white">State / Province</label>
          <div class="mt-2">
            <%= form.text_field :state, placeholder: true, autofocus: true, class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-2">
          <label for="postal-code" class="block text-sm font-medium leading-6 text-white">ZIP / Postal code</label>
          <div class="mt-2">
            <%= form.text_field :zip_code, placeholder: true, autofocus: true, class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </div>
    </div>

    <div class="border-b border-white/10">
      <h2 class="text-base font-semibold leading-7 text-white">Payment terms</h2>
      <div class="border-b border-gray-900/10 pb-12">

          <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
              <div class="sm:col-span-2">
                  <label for="street-address" class="block text-sm font-medium leading-6 text-white">Billing Cycle</label>
                  <div class="mt-2">
                      <%= form.collection_select :billing_cycle, Company::CYCLE, :to_s, :humanize, {include_blank: false}, {class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6"} %>
                  </div>
              </div>

              <div class="sm:col-span-2">
                  <label for="street-address" class="block text-sm font-medium leading-6 text-white">Payment Terms (Net)</label>
                  <div class="mt-2">
                      <%= form.number_field :payment_terms, class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
                  </div>
              </div>

              <div class="sm:col-span-2">
                  <label for="street-address" class="block text-sm font-medium leading-6 text-white">Currency</label>
                  <div class="mt-2">
                      <%= form.collection_select :currency, Company::CURRENCY, :to_s, :upcase, {include_blank: false}, {class: "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6"} %>
                  </div>
              </div>
          </div>
      </div>

    </div>
  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <% if form.object.persisted? %>
      <%= form.submit "Update", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    <% else %>
      <%= form.submit "Create", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    <% end %>
  </div>
<% end %>
</div>
</div>