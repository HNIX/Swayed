 <div class="card-panel">
  <div class="sm:flex justify-between items-center p-6 bg-slate-800">
    <h1 class="text-base font-semibold leading-7 text-gray-200">All companies</h1>
    <div class="mt-4 lg:mt-0">
      <%= link_to "Add a company", new_company_path, { data: {turbo_frame: "modal"}, class: "btn btn-small btn-primary btn-outline mr-2"} %>
    </div>
  </div>

  <div class="card-inner pt-3">
    <% if @companies %>
      <%= render 'company_list' %>
    <% else %>
      <div class="text-center p-8">
        <%= image_tag "empty.svg", class: "w-1/3 mb-4 m-auto" %>
      </div>
    <% end %>
  </div>
</div>







