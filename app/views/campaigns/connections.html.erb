
<%= render 'header', campaign: @campaign %>

<div data-controller="tabs" data-tabs-active-tab="border-indigo-500 text-indigo-600" data-tabs-inactive-tab="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" class=" mt-6 bg-white rounded-lg shadow">
    <div class="sm:hidden">
        <label for="tabs" class="sr-only">Select a tab</label>
        <!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
        <select id="tabs" name="tabs" class="block w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500">
        <option selected>Sources</option>
        <option>Distributions</option>
        <option>Integrations</option>
        </select>
    </div>
    <div class="hidden sm:block">
        <div class="border-b border-gray-200">
        <nav class="-mb-px flex" aria-label="Tabs">
            <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" -->
            <a href="#" id="sources" data-tabs-target="tab" data-action="click->tabs#change" class="w-1/2 border-b-2 py-4 px-1 text-center text-sm font-medium" aria-current="page">Sources</a>
            <a href="#" id="distributions" data-tabs-target="tab" data-action="click->tabs#change" class="w-1/2 border-b-2 py-4 px-1 text-center text-sm font-medium">Distributions</a>
        </nav>
        </div>
    </div>
    <div id="sources" data-tabs-target="panel" data-controller="slideover"
                data-slideover-invisible-class="translate-x-full,opacity-0"
                data-slideover-visible-class="translate-x-0,opacity-100"
                data-slideover-entering-class=""
                data-slideover-enter-timeout="300,300"
                data-slideover-leaving-class=""
                data-slideover-leave-timeout="300,300"
                data-slideover-active-target="#slideover-target">
                <div class="overflow-x-hidden overflow-x-scroll">
        <div class="px-4 py-8 sm:p-6 bg-gray-100 border-gray-200 border">
            <div class="max-w-xl text-sm text-gray-500">
                <p>Connect an existing source to your campaign</p>
            </div>
            <%= form_with(model: @campaign, local: true, class: "mt-5 sm:flex sm:items-center") do |form| %>
                <%= render "shared/error_messages", resource: form.object %>
                
                <%= form.fields_for :campaign_sources, CampaignSource.new do |cs_form| %>
                    <div class="w-full sm:max-w-xs">
                        <%= cs_form.select(:source_id, options_for_select(@sources.map{ |c| [c.display_name, c.id] }), {include_blank: true}, id: 'source_name') %>
                    </div>
                    <%= form.button "Connect", data: { turbo: false }, class: "ml-4 inline-flex justify-center rounded-md bg-indigo-600 py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
