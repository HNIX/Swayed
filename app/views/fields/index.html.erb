<div class="card-panel">
  <div>
    <% if @context.present? && @context.is_a?(Campaign) %>
      <%= render 'campaigns/header', campaign: @context %>
    <% elsif @context.present? && @context.is_a?(Vertical) %>
      <%= render 'verticals/header', campaign: @context %>
    <% end %>

    <div class="sm:flex justify-between items-center py-6 px-4 sm:px-6 lg:px-8 bg-gray-700/10 border-t border-t-slate-100/5">
      <% if @context.present? && @context.is_a?(Campaign) %>
        <h1 class="text-base font-semibold leading-7 text-gray-200">Fields</h1>
        
        <div class="flex">
            
          <div class="lg:ml-6 lg:mt-0">
            <%= link_to "New field", new_campaign_field_path(@context), { data: {turbo_frame: "modal"}, class: "btn btn-small btn-primary"} %>
          </div>
        </div>
      <% elsif @context.present? && @context.is_a?(Vertical) %>
        <h1 class="text-base font-semibold leading-7 text-gray-200">Fields</h1>
        
        <div class="flex">
            
          <div class="lg:ml-6 lg:mt-0">
            <%= link_to "New field", new_vertical_field_path(@context), { data: {turbo_frame: "modal"}, class: "btn btn-small btn-primary"} %>
          </div>
        </div>
      <% else %>
        <h1 class="text-base font-semibold leading-7 text-gray-200">All fields</h1>
      <% end %>
    </div>

  </div>

  <div class="card-inner pt-4">
    <% if @fields.present? %>
      <%= render 'table', fields: @fields %>
    <% else %>
      <div class="text-center p-8">
        <%= image_tag "empty.svg", class: "w-1/3 mb-4 m-auto" %>
      </div>
    <% end %>
  </div>
</div>
  
  
  
  